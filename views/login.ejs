<%- include("partials/header") %>

<div class="container container-fixed pt-3">
  <a href="/"><hr></a>
  <h1 class="ml-3">Login</h1>
  <div class="row">
    <div class="col-md-6 col-sm-12 mb-5">
      <div class="card">
          <div class="card-body">
            <form class="padd-15" action="/login" method="POST">
              <div class="form-group">
                <div class="col-lg-8 col-sm-12">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" placeholder="Enter your username" name="username" required>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-8 col-sm-12">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" placeholder="Password" name="password" required>
                </div>
              </div>
              <button type="submit" class="btn ml-3 btn-outline-success">Sign in</button>
              <a class="btn ml-2 btn-outline-danger" href="/">Cancel</a>
              <div class="row mt-4 ml-3 text-login"> <small>Don't have an account? <a href="/register">Register</a></small></div>
            </form>
          </div>
      </div>

    </div>
    <div class="col-md-6 col-sm-12">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google fa-2x"></i>
            <h4 class="social-text">Sign In with Google</h4>
          </a>
        </div>

      </div>


      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook fa-2x"></i>
            <h4 class="social-text">Sign In with Facebook</h4>
          </a>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
            <i class="fab fa-github fa-2x"></i>
            <h4 class="social-text">Sign In with GitHub</h4>
          </a>
        </div>

      </div>

    </div>

  </div>

</div>

<%- include("partials/footer") %>
