<%- include("partials/header") %>

<div class="container container-fixed pt-3">
  <h1 class="ml-3">Register</h1>
  <div class="row">
    <div class="col-md-6 col-sm-12 mb-5">
      <form class="padd-15" action="/register" method="POST">
        <div class="form-group">
          <div class="col-12">
            <label for="username">Username</label>
            <input type="text" class="form-control" placeholder="Enter username" name="username" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-12">
            <label for="email">Email address</label>
            <input type="email" class="form-control" placeholder="Enter email" name="email" required>
          </div>
        </div>
        <div class="form-group">
          <div class="col-12">
            <label for="password">Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password" required>
          </div>
        </div>
          <button type="submit" class="btn ml-3 btn-outline-success">Sign Up</button>
          <a class="btn ml-2 btn-outline-danger" href="/">Cancel</a>
      </form>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google fa-2x"></i>
            <h4 class="social-text">Sign Up with Google</h4>
          </a>
        </div>

      </div>


      <div class="card">
        <div class="card-body">
          <a class="btn  btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook fa-2x"></i>
            <h4 class="social-text">Sign Up with Facebook</h4>
          </a>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
            <i class="fab fa-github fa-2x"></i>
            <h4 class="social-text">Sign Up with GitHub</h4>
          </a>
        </div>

      </div>

    </div>

  </div>

</div>

<%- include("partials/footer") %>
