<%- include("partials/header.ejs") %>

<div class="container memos">
  <div class="row">
    <div class="col-lg-12">
      <a href="/"><hr></a>
        <h1>Welcome again!</h1>
      <p class="into-text">Here you can find your memos and memos from other users</p>
    </div>
  </div>
  <div class="row">

      <% memos.forEach(function(memo){ %>

      <div class="col-lg-4 col-md-4 col-sm-12 mb-5">
        <div class="card my-animation mx-auto border border-info shadow-0 mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <%=memo.topic%>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%=memo.title%></h5>
                <p class="card-text"><%=memo.content%></p>
            </div>
            </div>
          </div>
  <% }) %>
        </div>
        <a class="btn ml-2 btn-outline-success" href="/submit">Submit memos</a>
        <a class="btn ml-2 btn-outline-danger" href="/logout">Log out</a>

      <button onclick="topFunction()" id="myBtn" title="Back to top">Top</button>
</div>

<%- include("partials/footer.ejs") %>
